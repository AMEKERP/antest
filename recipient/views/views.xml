<odoo>
    <data>
        <!--create list view-->
        <record model="ir.ui.view" id="recipient.list">
            <field name="name">Recipient list</field>
            <field name="model">receipts.notes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="receipts_from"/>
                    <field name="receipts_to"/>
                    <field name="collector_name"/>
                    <field name="finished"/>
                </tree>
            </field>
        </record>
        <!--create form view-->
        <record model="ir.ui.view" id="recipient.form">
            <field name="name">Recipient form</field>
            <field name="model">receipts.notes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <button
                                name="create_receipt_schedule"
                                string="Generate Receipt"
                                type="object"
                                icon="fa-plus"
                                colspan="2"
                                class="oe_highlight"
                        />
                        <div>
                            <group>
                                <field name="name"/>
                                <field name="finished"/>
                                <field name="receipts_from"/>
                                <field name="receipts_to"/>
                                <field name="collector_name"/>
                            </group>
                            <notebook>
                                <page string="Receipts" name="receipts">
                                    <field name="receipts_ids">
                                        <tree>
<!--                                                <field name="name"/>-->
                                                <field name="receipt_id"/>
                                                <field name="name"/>
                                                <field name="receipt_collector"/>
                                                <field name="cancelled"/>

                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_invoice_recipient_inherit" model="ir.ui.view">
            <field name="name">account.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="partner_bank_id" position="after">
                    <field name="collector"/>
                    <field name="recipient_payment_one"/>
                    <field name="receipt_payment"/>

                </field>
            </field>
        </record>


        <record model="ir.actions.act_window" id="recipient.action_window">
            <field name="name">Recipient window</field>
            <field name="res_model">receipts.notes</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_recipient" model="ir.actions.act_window">
            <field name="name">Recipient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">receipts.notes</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Receipt !
                </p>
            </field>
        </record>

        <record id="action_recipient_generated" model="ir.actions.act_window">
            <field name="name">Receipt Generated</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">receipt.receipt</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                    Create your first Receipt !
                </p>
            </field>
        </record>
        <record id="action_collector" model="ir.actions.act_window">
            <field name="name">Collector</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">collector.collector</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                    Create your first Collector !
                </p>
            </field>
        </record>
         <record model="ir.actions.act_window" id="receipt_action_window">
            <field name="name">Recipient window</field>
            <field name="res_model">receipt.receipt</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="receipt_list_view">
            <field name="name">Receipt list</field>
            <field name="model">receipt.receipt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="receipt_id"/>
                    <field name="receipt_collector"/>
                    <field name="cancelled"/>
                    <field name="payment_id"/>
                </tree>
            </field>
        </record>

         <record model="ir.ui.view" id="receipt_form_view">
            <field name="name">Receipt Form</field>
            <field name="model">receipt.receipt</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                             <field name="name"/>
                            <field name="receipt_id"/>
                            <field name="receipt_collector"/>
                            <field name="cancelled"/>
                            <field name="payment_id" />
                        </group>
                    </sheet>

                </form>
            </field>
        </record>


        <menuitem id="menu_recipient"
                  name="Notes"
                  parent="account.menu_finance"
                  sequence="4"
                  />

        <menuitem id="note_menu"
                  name="Notes"
                  parent="menu_recipient"
                  sequence="1"
                  action="action_recipient"/>

        <menuitem id="menu_recipient_generated"
                  name="Receipts Generated"
                  parent="menu_recipient"
                  sequence="2"
                  action="action_recipient_generated"/>

        <menuitem id="menu_collector"
                  name="Collector"
                  parent="menu_recipient"
                  sequence="3"
                  action="action_collector"/>

    </data>
</odoo>